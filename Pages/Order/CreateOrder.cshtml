@page
@model ProjectOrder.Pages.Order.CreateOrderModel

<h2>Fazer Pedido</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="OrderCommand.CustomerId">Cliente</label>
        <select asp-for="OrderCommand.CustomerId" asp-items="Model.Customers" class="form-control">
            <option value="">Selecione um Cliente</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="OrderCommand.ProductId">Produto</label>
        <select asp-for="OrderCommand.ProductId" asp-items="Model.Products" class="form-control">
            <option value="">Selecione um Produto</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="OrderCommand.Quantity"></label>
        <input asp-for="OrderCommand.Quantity" class="form-control" type="number" min="1" />
    </div>
    <button type="submit" class="btn btn-success">Salvar Pedido</button>
</form>
