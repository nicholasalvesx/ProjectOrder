@page
@model ProjectOrder.Pages.IndexModel
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Bem-vindo ao ProjectOrder</h1>
    <p class="lead">Gerencie seus pedidos de forma eficiente e organizada.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Pedidos</h5>
                <p>Gerencie e acompanhe seus pedidos em tempo real.</p>
                <a class="btn btn-primary" asp-page="/Orders">Acessar</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Produtos</h5>
                <p>Cadastre, edite e controle o estoque de seus produtos.</p>
                <a class="btn btn-success" asp-page="/Products">Acessar</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Clientes</h5>
                <p>Gerencie informações e pedidos de seus clientes.</p>
                <a class="btn btn-warning" asp-page="/Customers">Acessar</a>
            </div>
        </div>
    </div>
</div>